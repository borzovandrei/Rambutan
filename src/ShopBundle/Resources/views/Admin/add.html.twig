{% extends 'ShopBundle:Default:index.html.twig' %}

{% block title %}Добавить продукт{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-4">
            <div class="container">
                {{ form(form_add_product, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-sm-4">
            <br>
            {% for flashMessage in app.session.flashbag.get('user_role') %}
                <div class="shop-notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <form
                    class="navbar-form"
                    method="get"
                    action="{{ path("user_role", {'search': app.request.query.get('search'), 'role': app.request.query.get('role') }) }}"
                    role="search">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Введите логин пользователя" name="search"
                           id="search" required>
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>Присвоить права</button>
                    </div>
                </div>
                <select  class="form-control"  name="role" id="role" required>
                    <option value="ROLE_USER">Покупатель</option>
                    <option value="ROLE_ADMIN">Менеджер</option>
                </select>
            </form>
            <br>
            {% for flashMessage in app.session.flashbag.get('order_status') %}
                <div class="shop-notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <form
                    class="navbar-form"
                    method="get"
                    action="{{ path("order_status", {'order': app.request.query.get('order'), 'status': app.request.query.get('status') }) }}"
                    role="search">
                <div class="input-group">
                    <input type="search" class="form-control" placeholder="Введите номер заказа" name="order"
                           id="search" required>
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>Изменить статус</button>
                    </div>
                </div>
                <select  class="form-control"  name="status" id="status" required>
                    <option value="1">В обработке</option>
                    <option value="2">Выполняется</option>
                    <option value="3">Выполнен</option>
                    <option value="4">Возврат</option>
                </select>
            </form>
        </div>
    </div>

{% endblock %}