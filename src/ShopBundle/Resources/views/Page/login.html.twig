{% extends 'ShopBundle:Default:index.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}

    <body>
    <div class="container jumbotron border border-success ">
        <div class="container">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <h3 class="display-4">
                    Добро пожаловать на администраторскую страницу, {{ app.user.username }}!
                </h3>
            {% else %}
                {% if error %}
                    <h2>
                        <div class="error">{{ error.message }}</div>
                    </h2>
                {% endif %}

                <form class="form-signin" action="{{ path('_security_check') }}" method="POST">
                    <h2 class="display-4 ">Пожалуйста, авторизуйтесь</h2>
                    <hr class="my-4">
                    <label for="username" class="sr-only">Логин</label>
                    <input type="text" id="username" class="form-control" placeholder="Логин" required="" autofocus=""
                           name="_username" value="{{ last_username }}">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" id="password" class="form-control" name="_password" placeholder="Пароль"
                           required="">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Запомнить меня
                        </label>
                    </div>
                    <input class="btn btn-lg btn-success btn-block" type="button" value="Регистрация"
                           onClick='location.href="{{ path('shop_reg') }}"'>
                    <button class="btn btn-lg btn-block btn-success" type="submit" name="login">Войти</button>
                </form>
            {% endif %}
        </div>
    </div>

    </body>


{% endblock %}