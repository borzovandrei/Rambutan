{% extends 'ShopBundle:Default:index.html.twig' %}

{% block title %}Личный кабинет{% endblock %}

{% block body %}
    <h1>Личный кабинет</h1>
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="container">
                <img class="rounded"
                     src="{{ asset(['img/users/', user.path]|join) }}"
                     alt="Generic placeholder image" width="340" height="340">

            </div>
            <div class="container">
                <h3>Заказы:</h3>
                <table class="table table-hover table-condensed">
                    <thead>
                    <tr>
                        <th>Номер заказа</th>
                        <th>Создан</th>
                        <th>Доставка</th>
                        <th>Цена</th>
                        <th>Коментарий</th>
                        <th>Статус</th>
                        <th>Подробнее</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in order %}
                        <tr {% if order.status.id == "4" %}
                                class="table-danger"
                            {% elseif order.status.id == "3"  %}
                                class="table-success"
                            {% elseif  order.status.id == "2" %}
                                class="table-warning"
                            {% elseif  order.status.id == "1" %}
                                class="table-active"
                            {% endif %} id="table_{{ order.id }}">
                            <td>{{ order.id }}</td>
                            <td>{{ order.created |date('Y.m.d') }}</td>
                            <td>{{ order.date |date('Y.m.d h:m') }}</td>
                            <td>{{ order.price }}</td>
                            <td>{{ order.comment }}</td>
                            <td>{{ order.status.name }}</td>
                            <td><a href="{{ path('room_order', {id: order.id})}}">
                                <img class="rounded"
                                     src="{{  asset(['img/icons/shopping-list.svg']|join)}}"
                                     alt="Подробнее" width="20" height="20">
                            </a></td>


                        </tr>
                    {% else %}
                        <p>Положите товар в корзину</p>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <table class="table">
                <tbody>
                <tr>
                    <th scope="row">Логин:</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th scope="row">Фамилия:</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th scope="row">Имя:</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th scope="row">Emile:</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Телефон:</th>
                    <td>{{ user.phone }}</td>
                </tr>
                <tr>
                    <th scope="row">Дата рождения:</th>
                    <td> {{ user.age|date('d-m-Y') }}</td>
                </tr>
                <tr>
                    <th scope="row">Пол:</th>
                    <td>{{ user.sex.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Адрес:</th>
                    <td>{{ user.address }}</td>
                </tr>
                </tbody>
            </table>


        </div>
    </div>

{% endblock %}